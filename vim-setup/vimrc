  execute "normal i# =\n"
  execute "normal i# \n"
  execute "normal i# " . username . " <" . email . ">\n"
  execute "normal i# " . enterprise . "\n"
  execute "normal i# \n"
	execute "normal i\n\n"
	execute "normal i# "
	normal 2k$

endfunction


